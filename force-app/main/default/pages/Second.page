<apex:page Controller="RecordsController" lightningStylesheets="true">
    <apex:form>
        <apex:pageMessages id="showm"></apex:pageMessages>
    <apex:pageBlock title="Object records to reassign" id="selectionBlock" >

        
            <apex:panelGrid columns="3">
                <apex:selectList id="unselected_list" required="false"
                    value="{!selected}" multiselect="true" size="10" 
                    style="width:250px" >
                    <apex:selectOptions value="{!unSelectedOptions}"/>
                </apex:selectList>
                <apex:panelGroup>
                    <apex:commandButton value=">>" action="{!DoSelect}" 
                        reRender="selectionBlock"/>
                    <br/>
                    <apex:commandButton value="<<" action="{!DoUnselect}" 
                        reRender="selectionBlock"/>
                </apex:panelGroup>
                <apex:selectList id="selected_list" required="false"
                    value="{!unselected}" multiselect="true" size="10" 
                    style="width:250px" >
                    <apex:selectOptions value="{!selectedOptions}"/>
                </apex:selectList>
           </apex:panelGrid>
        

        <apex:pageBlockButtons location="bottom">
            <apex:commandButton action="{! backFirstPage }" value="Back" />
            <apex:commandButton action="{! next }" value="Next" />
        </apex:pageBlockButtons>
        </apex:pageBlock>    
    
    </apex:form>

    <apex:outputPanel id="jspanel">
    <script type="text/javascript">
        function cancl()
        {
            Check = "{!selectedOptions}";
            if(Check == "true")
            {
                var pid='{!$CurrentPage.parameters.pid}';
                top.location=window.location.protocol + '//' + window.location.host+'/'+pid;
            }   
        }
    </script> 
</apex:outputPanel>
</apex:page>